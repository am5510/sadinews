generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model News {
  id        String   @id @default(cuid())
  title     String
  category  String   @default("ทั่วไป")
  image     String?
  album     String[]
  time      String   @default("เมื่อสักครู่")
  content   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  views     Int      @default(0)
  video     String?
  videoType String?
  videoEmbed String?
  isVisible Boolean  @default(true)
}

model Training {
  id           String   @id @default(cuid())
  title        String
  date         Int
  month        Int
  year         Int
  time         String
  location     String
  seats        Int      @default(0)
  available    Int      @default(0)
  price        String?
  type         String   @default("Onsite")
  speaker      String?
  speakerImage String?
  speakerPosition String?
  description  String?
  createdAt    DateTime @default(now())
}

model Media {
  id          String   @id @default(cuid())
  title       String
  category    String   @default("image")
  sourceType  String   @default("upload")
  url         String?
  embedCode   String?
  createdAt   DateTime @default(now())
  views       Int      @default(0)
  description String?
  coverImage  String?
}
